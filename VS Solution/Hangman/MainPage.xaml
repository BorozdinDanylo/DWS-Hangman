<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Hangman.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <Label
                x:Name="WrongsCounter"
                FontSize="15"
                HorizontalOptions="End"
                Text="Fehle: 5/7" />

            <Image
                x:Name="ProgresImage"
                Aspect="AspectFit"
                HorizontalOptions="Center"
                MaximumHeightRequest="335"
                MaximumWidthRequest="260"
                Source="hangman_sprite_funf.png" />

            <Label
                x:Name="ShowedWord"
                FontSize="32"
                HorizontalOptions="Center"
                Text="S _ u _ _" />

            <Entry
                x:Name="LetterInput"
                FontSize="24"
                TextChanged="CheckLetter"
                HorizontalOptions="Center"
                Placeholder="Enter a letter" />

            <Button
                Clicked="EnterLetter"
                FontSize="24"
                HorizontalOptions="Center"
                Text="Enter Letter" />

            <Button
                x:Name="ResetButton"
                Clicked="ResetGame"
                FontSize="24"
                HorizontalOptions="Center"
                IsVisible="False"
                Text="Reset Game" />

            <Button
                x:Name="ExitButton"
                Clicked="ExitGame"
                FontSize="24"
                HorizontalOptions="Center"
                IsVisible="False"
                Text="Reset Game" />

            <Label
                FontSize="20"
                HorizontalOptions="Start"
                Text="Wrong letters:" />

            <Label
                x:Name="WrongLetters"
                FontSize="20"
                HorizontalOptions="Start"
                MaxLines="5"
                Text="K M N G W" />

            <Label
                x:Name="GameOver"
                FontAttributes="Bold"
                FontSize="50"
                HorizontalOptions="Center"
                IsVisible="False"
                Text="You Won!" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
